<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="vipps" translate="label" sortOrder="205">
            <label>Vipps MobilePay</label>
        </tab>
        <section id="vipps" translate="label" type="text" sortOrder="305" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Login</label>
            <tab>vipps</tab>
            <resource>Vipps_Login::login</resource>
            <group id="vipps_login" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="5">
                <fieldset_css>complex vipps-section active</fieldset_css>
                <frontend_model>Vipps\Login\Model\Adminhtml\System\Config\LoginHeaderFieldSet</frontend_model>
                <comment><![CDATA[With the Login API, Users can log...(needs update)]]></comment>
                <field id="environment" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Environment</label>
                    <source_model>Vipps\Login\Model\Adminhtml\Source\Environment</source_model>
                    <config_path>vipps/login/environment</config_path>
                </field>
                <field id="debug" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>vipps/login/debug</config_path>
                </field>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable this Solution</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>vipps/login/enabled</config_path>
                    <requires>
                        <group id="vipps_required"/>
                    </requires>
                </field>
                <field id="version" translate="label" type="select" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Choose Brand</label>
                    <source_model>Vipps\Login\Model\Config\Source\Version</source_model>
                    <config_path>vipps/login/version</config_path>
                    <requires>
                        <group id="vipps_required"/>
                    </requires>
                </field>
                <group id="vipps_required" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="5">
                    <label>Basic Settings</label>
                    <field id="client_id" translate="label" type="obscure" sortOrder="81" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Client ID</label>
                        <config_path>vipps/login/client_id</config_path>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    </field>
                    <field id="client_secret" translate="label" type="obscure" sortOrder="82" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Client Secret</label>
                        <config_path>vipps/login/client_secret</config_path>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    </field>
                </group>
                <group id="advanced_settings" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="100">
                    <label>Advanced Settings</label>
                    <field id="marketing_consent_active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Activate marketing consent</label>
                        <config_path>vipps/login/marketing_consent_active</config_path>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="marketing_consent_email" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Receive offers via email</label>
                        <config_path>vipps/login/marketing_consent_email</config_path>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="vipps/vipps_login/advanced_settings_marketing_consent_active">1</field>
                        </depends>
                    </field>
                    <field id="marketing_consent_sms" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Receive offers via SMS</label>
                        <config_path>vipps/login/marketing_consent_sms</config_path>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="vipps/vipps_login/advanced_settings_marketing_consent_active">1</field>
                        </depends>
                    </field>
                    <field id="marketing_consent_digital" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>I would like to receive digital marketing</label>
                        <config_path>vipps/login/marketing_consent_digital</config_path>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="vipps/vipps_login/advanced_settings_marketing_consent_active">1</field>
                        </depends>
                    </field>
                    <field id="marketing_consent_personal" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Get customized offers</label>
                        <config_path>vipps/login/marketing_consent_personal</config_path>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="vipps/vipps_login/advanced_settings_marketing_consent_active">1</field>
                        </depends>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
